<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/punch_iv"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_yuanjiao_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/punch_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="13"
        android:textColor="#000000"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="@+id/punch_iv"
        app:layout_constraintTop_toTopOf="@+id/punch_iv" />

    <TextView
        android:id="@+id/punch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跑步"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/punch_iv"
        app:layout_constraintStart_toStartOf="@+id/punch_iv"
        app:layout_constraintTop_toBottomOf="@+id/punch_time" />

    <TextView
        android:id="@+id/punch_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="次"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/punch_title"
        app:layout_constraintEnd_toEndOf="@+id/punch_iv"
        app:layout_constraintStart_toEndOf="@+id/punch_time"
        app:layout_constraintTop_toTopOf="@+id/punch_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>